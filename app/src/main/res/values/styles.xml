<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="themeFade" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--<item name="android:windowExitTransition">@transition/fade</item>-->
        <item name="android:windowEnterAnimation">@transition/fade</item>
        <!--<item name="android:windowReenterTransition">@transition/fade</item>-->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="themeSlide" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowEnterAnimation">@transition/slide</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="themeExplode" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowEnterAnimation">@transition/explode</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="RedTheme" parent="AppTheme">
        <item name="colorPrimary">@color/red_primary</item>
        <item name="colorPrimaryDark">@color/red_primary_dark</item>
        <item name="colorAccent">@color/red_accent</item>
    </style>
