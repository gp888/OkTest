<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle">
            <gradient android:startColor="#FD8350"
                android:endColor="#FA2764"/>
            <stroke
                android:width="0dp"
                android:color="#fff"/>
        </shape>
    </item>

    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/video_gray"/>
            <stroke
                android:width="0dp"
                android:color="#fff"/>
        </shape>
    </item>



</layer-list>