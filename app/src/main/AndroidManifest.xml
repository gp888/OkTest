<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gp.oktest">

    <uses-permission android:name="android.permission.INTERNET"/>

    <!--大致位置基于网络-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!--精确位置基于gps和网络-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!--网络状态-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    //模糊定位权限：一般用于网络定位
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    //精确定位权限：一般用于gps定位
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <!--适配8.0允许未知来源安装应用程序-->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="true"/>
    <!--<uses-feature android:name="android.hardware.camera.autofocus" android:required="false"/>-->

    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoadNetImageActivity"
            android:theme="@style/themeExplode"/>

        <activity android:name=".CountDownTimerActivity"
            android:theme="@style/themeFade"/>

        <activity android:name=".RecyclerViewActivity"
            android:theme="@style/themeSlide"/>

        <activity android:name=".MoveViewActivity"/>
        <activity android:name=".PhotosActivity"/>
        <activity android:name=".RxPermissionActivity"/>
        <activity android:name=".ThemeBaseActivity"
            android:theme="@style/RedTheme"/>
        <activity android:name=".KeyBoardAvtivity"/>
        <activity android:name=".PopupWindowActivity"/>
        <activity android:name=".SpannableActivity" />
        <service android:name=".service.ForegroundService"/>
        <service android:name=".service.AsycnService"/>

        <activity android:name=".FileProvider7Activity"/>
        <activity android:name=".ServiceActivity"/>
        <activity android:name=".handlerthread.HandlerThreadActivity"/>
        <activity android:name=".ImageCacheActivity"/>
        <activity android:name=".RetrofitActivity"/>
        <activity android:name=".camera.CameraPreviewActivity"/>
        <activity android:name=".camera.CameraActivity2"/>
        <activity android:name=".recordplaypcm.PcmRecordPlay"/>
        <activity android:name=".minivideo.MiniVideoActivity"/>
        <activity android:name=".minivideo.MiniVideoPlayActivity"/>
        <activity android:name=".minivideo.MiniVideoRecordActivity"/>
        <activity android:name=".StickMenuActivity"/>
        <activity android:name=".mp4player.VideoPlayActivity"/>

        <activity android:name=".androidmedia.H264EncodeActivity"/>
        <activity android:name=".androidmedia.MediaMuxerActivity"/>

        <activity android:name=".pcmtowav.PcmToWavActivity"/>
        <activity android:name=".pcmtowav.PcmToWavListActivity"/>
    </application>

</manifest>